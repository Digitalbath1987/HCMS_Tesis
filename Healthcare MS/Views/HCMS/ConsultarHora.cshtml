@model Healthcare_MS.Models.HCMSConsultarHora
@{
    ViewBag.Title = "Consultar hora médica";
}
@section Styles {
    <link href="@Url.Content("~/ContentCSS/Partial.css")" rel="stylesheet" type="text/css" />
}

<h2>Consultar hora médica</h2>

@using (Html.BeginForm("_BuscarHora", "HCMS", FormMethod.Get, new { @class = "t-spacing bl-spacing" }))
{
    <div class="row">
        <div class="form-inline" id="BuscarHora">
            <div class="form-group col-sm-8 col-lg-3 col-md-3">
                @Html.TextBoxFor(m => m.Codigo, "", new { @class = "col-sm-10 col-md-6 col-lg-4 form-control", @placeholder = "Ingresa el código de hora" })
            </div>
            <div class="form-group col-sm-4">
                <p class="text-center"><input type="submit" value="Buscar" id="buscarHora" class="btn btn-primary col-lg-3 col-md-4 col-sm-6" /></p>
            </div>
            <div class="form-group">
                <p class="text-danger">@ViewBag.Message</p>
                @Html.ValidationMessageFor(m => m.Codigo, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}
    <div id="Modal" class="modal fade in">
        <div class="modal-dialog">
            <div class="modal-content">
                <div id='ModalContent'></div>
            </div>
        </div>
    </div>

    @section scripts{
        <script>
            $(document).ready(function () {
                $('#buscarHora').click(function (e) {
                    $('#Progress').modal('toggle');
                    e.preventDefault();
                    $('#resultado').remove();
                    var data = {
                        Codigo: $('#Codigo').val()
                    }
                    $.ajax({
                        url: '/HCMS/BuscarHora',
                        data: data
                    }).success(function (html) {
                        $('#ModalContent').append(html);
                        $('#Progress').modal('toggle');
                        $('#Modal').modal('toggle');                        
                    });
                });
            });
        </script>
    }