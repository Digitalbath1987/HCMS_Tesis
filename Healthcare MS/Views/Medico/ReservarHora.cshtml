
@{
    ViewBag.Title = "Reservar hora";
}

<h2>Reservar hora</h2>

<div class="row t-spacing">
    <div class="form-inline" id="BuscarHora">
        <div class="form-group col-sm-8 col-lg-3 col-md-3">
            @Html.TextBox("txtCodExamen", "", new { @class = "col-sm-10 col-md-6 col-lg-4 form-control", @placeholder = "Rut sin puntos ni guión" })
        </div>
        <div class="form-group col-sm-4">
            <p class="text-center"><a id="button-search" href="#" class="btn btn-primary col-sm-6" role="button">Buscar paciente</a></p>
        </div>
    </div>
</div>

<div id="data" style="display:none">
    <div class="row t-spacing">
        <div class="col-sm-4 col-md-3 col-lg-2"><label class="form-label">Nombre paciente</label></div>
        <div class="col-sm-4 col-md-3 col-lg-2">Paciente Prueba 1</div>
    </div>
    <div class="row">
        <div class="col-sm-4 col-md-3 col-lg-2"><label class="form-label">RUT</label></div>
        <div class="col-sm-4 col-md-3 col-lg-2">xx.xxx.xxx-x</div>
    </div>
    <div class="row">
        <div class="col-sm-4 col-md-3 col-lg-2"><label class="form-label">Centro médico</label></div>
        <div class="col-sm-4 col-md-3 col-lg-2">CESFAM Joan Alsina</div>
    </div>
    <div class="row">
        <div class="col-sm-4 col-md-3 col-lg-2 col-sm-offset-4 col-md-offset-3 col-lg-offset-2">
            <a href="#" class="btn btn-primary col-sm-12" data-toggle="modal" data-target="#horas-disponibles-medico">Buscar horas</a>
        </div>
    </div>
</div>


<div class="modal fade" id="horas-disponibles-medico" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" align="center">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </button>
            </div>

            <!-- Begin # DIV Form -->
            <div id="div-forms">
                <!-- Begin # Login Form -->
                <div id="login-form">
                    <div class="modal-body">
                        <div id="div-login-msg">
                            <div id="icon-login-msg" class="glyphicon glyphicon-chevron-right"></div>
                            <span id="text-login-msg">Próximas horas disponibles</span>
                        </div>
                        <div class="row t-spacing">
                            <div class="col-sm-6">
                                <label class="form-label">Médico</label>
                            </div>
                            <div class="col-sm-6">
                                <label class="form-control">Katherine Mardones</label>
                            </div>
                        </div>
                        <div class="row t-spacing">
                            <div class="col-sm-12">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th class="col-sm-4">Especialidad</th>
                                            <th class="col-sm-3">Fecha</th>
                                            <th class="col-sm-3">Hora</th>
                                            <th class="col-sm-2">Reservar</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Medicina general</td>
                                            <td>20-10-2017</td>
                                            <td>10:15</td>
                                            <td><a href="#" data-toggle="modal" data-target="#confirm-hora"><span class="fa-stack fa-lg pull-left"><i class="fa fa-address-book-o fa-stack-1x "></i></span></a></td>
                                        </tr>
                                        <tr>
                                            <td>Medicina general</td>
                                            <td>24-10-2017</td>
                                            <td>11:00</td>
                                            <td><a href="#" data-toggle="modal" data-target="#confirm-hora"><span class="fa-stack fa-lg pull-left"><i class="fa fa-address-book-o fa-stack-1x "></i></span></a></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="confirm-hora" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="max-width:400px">
        <div class="modal-content">
            <div class="modal-body">
                <div id="div-login-msg">
                    <span id="text-login-msg">¿Reservar hora médica?</span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <a class="btn btn-danger btn-ok" href="@Url.Action("Index","PortalPacientes")">Aceptar</a>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
$(document).ready(function () {
    $('#button-search').click(function () {
        $('#data').stop(true).fadeIn();
    })
});
</script>