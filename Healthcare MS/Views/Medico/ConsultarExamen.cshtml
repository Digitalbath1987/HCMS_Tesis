
@{
    ViewBag.Title = "Consultar resultado de examen";
}
@section Styles{
    <link href="@Url.Content("~/ContentCSS/themes/base/jquery-ui.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/ContentCSS/Partial.css")" rel="stylesheet" type="text/css" />
}

<h2>Consultar resultado de examen</h2>

<div id="tabs" class="t-spacing bl-spacing">

    <ul>
        <li><a href="#tab-paciente">Por paciente</a></li>
        <li><a href="#tab-codigo">Por código de hora</a></li>
    </ul>

    <div id="tab-paciente">
        <div class="row bl-spacing">
            <div class="form-group">
                <div class="col-sm-4 col-md-3 col-lg-2">
                    <label class="form-label">Selecciona al paciente</label>
                </div>
                <div class="col-sm-4 col-md-3 col-lg-2">
                    <select class="form-control">
                        <option>Paciente Prueba 1</option>
                        <option>Paciente Prueba 2</option>
                        <option>Paciente Prueba 3</option>
                        <option>Paciente Prueba 4</option>
                    </select>
                </div>
                <div class="col-sm-4 col-md-3 col-lg-2">
                    <a href="#" data-toggle="modal" data-target="#buscar-paciente"><span class="fa-stack fa-lg pull-left"><i class="fa fa-search fa-stack-1x "></i></span></a>
                </div>
            </div>
        </div>
    </div>

    <div id="tab-codigo">
        <div class="row bl-spacing">
            <div class="form-inline" id="BuscarHora">
                <div class="form-group col-sm-8 col-lg-3 col-md-3">
                    @Html.TextBox("txtCodExamen", "", new { @class = "col-sm-10 col-md-6 col-lg-4 form-control", @placeholder = "Ingresa el código de hora" })
                </div>
                <div class="form-group col-sm-4">
                    <p class="text-center"><a href="#" class="btn btn-primary col-sm-6" role="button" data-toggle="modal" data-target="#resultados" style="color:#FFF">Buscar</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="buscar-paciente" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog bl-spacing">
        <div class="modal-content">
            <div class="modal-header" align="center">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </button>
            </div>

            <!-- Begin # DIV Form -->
            <div id="div-forms">
                <!-- Begin # Login Form -->
                <div id="login-form">
                    <div class="modal-body">
                        <div id="div-login-msg">
                            <div id="icon-login-msg" class="glyphicon glyphicon-chevron-right"></div>
                            <span id="text-login-msg">Resultado de búsqueda</span>
                        </div>
                        <div class="row t-spacing">
                            <div class="col-sm-6">
                                <label class="form-label">Paciente</label>
                            </div>
                            <div class="col-sm-6">
                                <label class="form-control">Paciente Prueba 1</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <label class="form-label">RUT</label>
                            </div>
                            <div class="col-sm-6">
                                <label class="form-control">xx.xxx.xxx-x</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <label class="form-label">Centro médico</label>
                            </div>
                            <div class="col-sm-6">
                                <label class="form-control">Carlos Lorca</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <label class="form-label">Sector</label>
                            </div>
                            <div class="col-sm-6">
                                <label class="form-control">Sector amarillo</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th class="col-sm-3">Fecha</th>
                                            <th class="col-sm-3">Hora</th>
                                            <th class="col-sm-3">Código</th>
                                            <th class="col-sm-2">Resultado</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>10-09-2017</td>
                                            <td>14:15</td>
                                            <td>548-744-4157</td>
                                            <td><a href="#" data-toggle="modal" data-target="#resultados"><span class="fa-stack fa-lg pull-left"><i class="fa fa-flask fa-stack-1x "></i></span></a></td>
                                        </tr>
                                        <tr>
                                            <td>05-09-2017</td>
                                            <td>10:00</td>
                                            <td>337-214-3155</td>
                                            <td><a href="#" data-toggle="modal" data-target="#resultados"><span class="fa-stack fa-lg pull-left"><i class="fa fa-flask fa-stack-1x "></i></span></a></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="resultados" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog bl-spacing">
        <div class="modal-content">
            <div class="modal-header" align="center">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </button>
            </div>

            <!-- Begin # DIV Form -->
            <div id="div-forms">
                <!-- Begin # Login Form -->
                <div id="login-form">
                    <div class="modal-body">
                        <div id="div-login-msg">
                            <div id="icon-login-msg" class="glyphicon glyphicon-chevron-right"></div>
                            <span id="text-login-msg">Resultado de búsqueda</span>
                        </div>
                        <div class="row t-spacing">
                            <div class="col-sm-6">
                                <label class="form-label">Nombre de Paciente</label>
                            </div>
                            <div class="col-sm-6">
                                <label class="form-control">Nombre prueba</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <label class="form-label">RUT</label>
                            </div>
                            <div class="col-sm-6">
                                <label class="form-control">xx.xxx.xxx-x</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <label class="form-label">Centro médico</label>
                            </div>
                            <div class="col-sm-6">
                                <label class="form-control">CESFAM Carlos Lorca</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <label class="form-label">Fecha y hora de examen</label>
                            </div>
                            <div class="col-sm-6">
                                <label class="form-control">05-10-2017 10:12</label>
                            </div>
                        </div>
                        <div class="row"><h3>Resultados</h3></div>
                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Tipo de examen</th>
                                            <th>Valor de referencia</th>
                                            <th>Resultado</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Sangre - Conteo de plaquetas rojos</td>
                                            <td>150 a 400 × 109/L.</td>
                                            <td>300</td>
                                        </tr>
                                        <tr>
                                            <td>Sangre - VHS</td>
                                            <td>1-7mm/h</td>
                                            <td>4</td>
                                        </tr>
                                        <tr>
                                            <td>Glucosa</td>
                                            <td>70 y 100 mg/dl</td>
                                            <td>90</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(function () {
        $("#tabs").tabs();
    });
</script>
