
@{
    ViewBag.Title = "Ver listado de pacientes";
}

<h2>Listado de pacientes</h2>

<div class="form-group row t-spacing">
    <div class="col-sm-4 col-md-3 col-lg-3"><label class="form-label">Selecciona el centro médico</label></div>
    <div class="col-sm-4 col-md-3 col-lg-2">
        <select class="form-control">
            <option>Joan Alsina</option>
        </select>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-4 col-md-3 col-lg-3"><label class="form-label">Selecciona el sector</label></div>
    <div class="col-sm-4 col-md-3 col-lg-2">
        <select class="form-control">
            <option>Rojo</option>
            <option>Azul</option>
            <option>Amarillo</option>
            <option>Verde</option>
        </select>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-4 col-md-3 col-lg-2 col-sm-offset-4 col-md-offset-3 col-lg-offset-3">
        <p class="text-center"><a id="button-search" href="#" class="btn btn-primary col-sm-12" role="button">Buscar</a></p>
    </div>
</div>

<div id="listado" style="display:none">
    <div class="row bl-spacing">
        <div class="col">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Nombre completo</th>
                        <th>RUT</th>
                        <th>Teléfono / Celular</th>
                        <th>Correo electrónico</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Paciente Prueba 1</td>
                        <td>xx.xxx.xxx-x</td>
                        <td>9 9999 9999</td>
                        <td>correo.prueba@pruebas.cl</td>
                    </tr>
                    <tr>
                        <td>Paciente Prueba 2</td>
                        <td>yy.yyy.yyy-y</td>
                        <td>2 2222 2222 / 9 8888 8888</td>
                        <td>correo.prueba2@pruebas.cl</td>
                    </tr>
                    <tr>
                        <td>Paciente Prueba 3</td>
                        <td>zz.zzz.zzz-z</td>
                        <td>2 2223 3333</td>
                        <td>correo.prueba3@pruebas.cl</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
$(document).ready(function () {
    $('#button-search').click(function () {
        $('#listado').stop(true).fadeIn();
    })
});
</script>